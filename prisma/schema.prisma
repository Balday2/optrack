datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  phone      String  @unique
  password   String
  nom        String
  prenom     String
  matricule  String
  adresse     String
  sexe       String
  etatCivil  String
  status     String  @default("actif")
  role       String  @default("coordinateur")
  centre_id  String? @db.ObjectId
  centre     Centre? @relation(fields: [centre_id], references: [id])
  coordinatorOf Operation[]  @relation("Coordinator")
  operatorOf  Operation[]  @relation("Operator")
  coordinator_id String?    @db.ObjectId
  coordinator    User?      @relation("UserCoordinator", fields: [coordinator_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subordinates   User[]     @relation("UserCoordinator")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Centre {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  prefecture  String
  commune  String
  quartier  String
  teams     Team[]
  users     User[]
  operations Operation[]
  status     String  @default("actif")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  centre_id  String @db.ObjectId
  centre    Centre   @relation(fields: [centre_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Operation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre    Int
  date DateTime
  centre_id   String @db.ObjectId
  centre      Centre   @relation(fields: [centre_id], references: [id])
  coordinator_id  String @db.ObjectId
  coordinator    User     @relation("Coordinator", fields: [coordinator_id], references: [id])
  operator_id   String @db.ObjectId
  operator     User     @relation("Operator", fields: [operator_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}