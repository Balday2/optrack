datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  phone      String  @unique
  password   String
  nom        String
  prenom     String
  adresse     String
  sexe       String
  etatCivil  String
  status     String  @default("active")
  role       String  @default("coordinator")
  centre_id  String? @db.ObjectId
  centre     Centre? @relation(fields: [centre_id], references: [id])
  operations Operation[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Centre {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  prefecture  String
  commune  String
  quartier  String
  teams     Team[]
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  centre_id  String @db.ObjectId
  centre    Centre   @relation(fields: [centre_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Operation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id   String @db.ObjectId
  user      User   @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}